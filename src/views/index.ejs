<form action="/calc" method="post">
  <input type="text" name="num1">
  <select name="op">
    <option value="+">+</option>
    <option value="-">-</option>
    <option value="*">*</option>
    <option value="/">/</option>
  </select>
  <input type="text" name="num2">
  <input type="submit" value="calcular">
</form>

<% if (contas) { %>
  <h2>Contas</h2>
  <% contas.forEach((contas) => { %>
    <ull>
    <li><%= contas.num1 %> <%= contas.op %> <%= contas.num2 %> = <%= 
      contas.total %></li>
    </ull>
  <% }) %>
<% } %> 
